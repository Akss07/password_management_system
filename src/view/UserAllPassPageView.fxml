<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="77.0"
	prefWidth="801.0" xmlns="http://javafx.com/javafx/20.0.1"
	xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.UserAllPasswordPage">
	<children>
		<Pane layoutX="85.0" layoutY="8.0" prefHeight="61.0"
			prefWidth="135.0">
			<children>
				<Label fx:id="appNameLabel" layoutX="26.0" layoutY="31.0" prefHeight="12.0"
					prefWidth="83.0" text="App Name" textFill="#070707">
					<font>
						<Font name="Berlin Sans FB" size="18.0" />
					</font>
				</Label>
				<Label layoutX="16.0" layoutY="4.0" prefHeight="21.0"
					prefWidth="103.0" text="Domain Name" textAlignment="JUSTIFY">
					<font>
						<Font name="Berlin Sans FB" size="16.0" />
					</font>
				</Label>
			</children>
		</Pane>
		<HBox layoutX="281.0" layoutY="21.0" prefHeight="35.0"
			prefWidth="493.0" spacing="50.0">
			<children>
				<Button fx:id="editButton" alignment="CENTER" layoutX="481.0"
					layoutY="363.0" minHeight="-Infinity" minWidth="-Infinity"
					mnemonicParsing="false" onAction="#editButtonAction"
					prefHeight="35.0" prefWidth="133.0"
					style="-fx-background-color: blue; -fx-background-radius: 50px;"
					text="Edit Password" textAlignment="CENTER" textFill="WHITE">
					<font>
						<Font name="Berlin Sans FB" size="16.0" />
					</font>
				</Button>
				<Button alignment="CENTER" mnemonicParsing="false"
					onAction="#copyUsernameButtonOnAction"
					onMouseEntered="#buttonOnEnter" onMouseExited="#buttonOnExit"
					prefHeight="33.0" prefWidth="135.0"
					style="-fx-background-color: transparent; -fx-border-color: green; -fx-border-width: 2px;  -fx-border-radius: 5px;  -fx-padding: 5px 10px;  -fx-text-fill: green;  -fx-background-radius: 50px;"
					text="Copy username" textAlignment="CENTER">
					<font>
						<Font name="Berlin Sans FB" size="16.0" />
					</font>
				</Button>
				<Button mnemonicParsing="false"
					onAction="#copyPasswordButtonOnAction"
					onMouseEntered="#buttonOnEnter" onMouseExited="#buttonOnExit"
					prefHeight="33.0" prefWidth="133.0"
					style="-fx-background-color: transparent; -fx-border-color: green; -fx-border-width: 2px;  -fx-border-radius: 5px;  -fx-padding: 5px 10px;  -fx-text-fill: green;  -fx-background-radius: 50px;"
					text="Copy password" textAlignment="CENTER">
					<font>
						<Font name="Berlin Sans FB" size="16.0" />
					</font>
				</Button>
			</children>
		</HBox>
		<ImageView fitHeight="50.0" fitWidth="55.0" layoutX="25.0"
			layoutY="13.0" pickOnBounds="true" preserveRatio="true">
			<image>
				<Image url="@../images/domain.png" />
			</image>
		</ImageView>
	</children>
</AnchorPane>
