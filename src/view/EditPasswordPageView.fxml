<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="-Infinity" prefHeight="333.0"
	prefWidth="471.0" xmlns="http://javafx.com/javafx/20.0.1"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="controller.EditPasswordPage">
	<children>
		<Label layoutX="146.0" layoutY="49.0" text="Edit Password">
			<font>
				<Font name="Berlin Sans FB" size="28.0" />
			</font>
		</Label>
		<HBox alignment="CENTER_RIGHT" layoutX="98.0" layoutY="105.0"
			maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
			minWidth="-Infinity" prefHeight="35.0" prefWidth="260.0"
			style="-fx-background-color: transparent; -fx-border-color: #E1E1E1; -fx-border-radius: 50px;">
			<children>
				<PasswordField fx:id="oldPasswordField"
					alignment="CENTER" prefHeight="33.0" prefWidth="258.0"
					style="-fx-background-color: transparent;" />
			</children>
		</HBox>
		<HBox alignment="CENTER_RIGHT" layoutX="98.0" layoutY="150.0"
			maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
			minWidth="-Infinity" prefHeight="35.0" prefWidth="260.0"
			style="-fx-background-color: transparent; -fx-border-color: #E1E1E1; -fx-border-radius: 50px;">
			<children>
				<PasswordField fx:id="newPasswordField"
					alignment="CENTER" prefHeight="33.0" prefWidth="267.0"
					promptText="Enter Your New Password"
					style="-fx-background-color: transparent;" />
			</children>
		</HBox>
		<HBox alignment="CENTER_RIGHT" layoutX="98.0" layoutY="196.0"
			maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
			minWidth="-Infinity" prefHeight="35.0" prefWidth="260.0"
			style="-fx-background-color: transparent; -fx-border-color: #E1E1E1; -fx-border-radius: 50px;">
			<children>
				<PasswordField fx:id="confirmPasswordField"
					alignment="CENTER" prefHeight="33.0" prefWidth="258.0"
					promptText="Confirm Your New Password"
					style="-fx-background-color: transparent;" />
			</children>
		</HBox>
		<Button layoutX="97.0" layoutY="257.0" minHeight="-Infinity"
			minWidth="-Infinity" mnemonicParsing="false"
			onAction="#saveButtonAction" prefHeight="35.0" prefWidth="260.0"
			style="-fx-background-color: green; -fx-background-radius: 50px;"
			text="SAVE" textFill="WHITE" />
		<Label fx:id="unMatchedPassword" alignment="CENTER"
			contentDisplay="CENTER" layoutX="147.0" layoutY="301.0"
			prefHeight="17.0" prefWidth="160.0"
			style="-fx-background-color: #FAE4ED;" textAlignment="CENTER"
			textFill="#a5155f" visible="false" />
	</children>
</AnchorPane>
