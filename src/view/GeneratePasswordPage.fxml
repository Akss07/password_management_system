<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity"
	minHeight="-Infinity" minWidth="-Infinity" prefHeight="200.0"
	prefWidth="300.0" xmlns="http://javafx.com/javafx/20.0.1"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="controller.GeneratePasswordPage">
	<children>
		<VBox alignment="CENTER" layoutX="50.0" layoutY="25.0"
			prefHeight="150.0" prefWidth="200.0" spacing="20.0">
			<children>
				<Text strokeType="OUTSIDE" strokeWidth="0.0"
					text="Generated Password" textAlignment="CENTER">
					<font>
						<Font name="Berlin Sans FB" size="16.0" />
					</font>
				</Text>
				<Label fx:id="generatedPasswordLabel"
					style="-fx-background-color: #FAE4ED;" text="passsword"
					textAlignment="CENTER" visible="true">
					<font>
						<Font name="Berlin Sans FB" size="16.0" />
					</font>
				</Label>
				<Button layoutX="251.0" layoutY="420.0" minHeight="-Infinity"
					minWidth="-Infinity" mnemonicParsing="false"
					onAction="#copyPassword" onMouseEntered="#buttonOnEnter"
					onMouseExited="#buttonOnExit" prefHeight="35.0" prefWidth="161.0"
					style="-fx-background-color: green; -fx-background-radius: 50px;"
					text="Copy Password" textFill="WHITE" />
			</children>
		</VBox>
	</children>
