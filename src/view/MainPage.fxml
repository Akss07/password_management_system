<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="borderPane" maxHeight="-Infinity"
	maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
	prefHeight="520.0" prefWidth="800.0"
	style="-fx-background-color: ffffff;"
	xmlns="http://javafx.com/javafx/20.0.1"
	xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainPage">
	<center>
		<ScrollPane fitToHeight="true" fitToWidth="true"
			prefHeight="200.0" prefWidth="200.0"
			style="-fx-background-color: ffffff;" BorderPane.alignment="CENTER">
			<content>
				<VBox fx:id="passwordsVBox" alignment="TOP_CENTER"
					prefHeight="59.0" prefWidth="598.0"
					style="-fx-background-color: ffffff;" />
			</content>
		</ScrollPane>
	</center>
	<bottom>
		<HBox alignment="CENTER" prefHeight="51.0" prefWidth="800.0"
			spacing="155.0" style="-fx-background-color: #eaeaea;"
			BorderPane.alignment="CENTER">
			<children>
				<Button fx:id="search" alignment="CENTER" layoutX="481.0"
					layoutY="363.0" minHeight="-Infinity" minWidth="-Infinity"
					mnemonicParsing="false" onAction="#searchButtonAction"
					prefHeight="35.0" prefWidth="133.0"
					style="-fx-background-color: green; -fx-background-radius: 50px;"
					text="Search" textAlignment="CENTER" textFill="WHITE">
					<font>
						<Font name="Berlin Sans FB" size="16.0" />
					</font>
				</Button>
				<Button fx:id="addNewPasswordButton" alignment="CENTER"
					layoutX="481.0" layoutY="363.0" minHeight="-Infinity"
					minWidth="-Infinity" mnemonicParsing="false"
					onAction="#addNewPasswordButtonAction" prefHeight="35.0"
					prefWidth="153.0"
					style="-fx-background-color: green; -fx-background-radius: 50px;"
					text="Add new password" textAlignment="CENTER" textFill="WHITE">
					<font>
						<Font name="Berlin Sans FB" size="16.0" />
					</font>
				</Button>
				<Button fx:id="logoutButton" alignment="CENTER"
					layoutX="481.0" layoutY="363.0" minHeight="-Infinity"
					minWidth="-Infinity" mnemonicParsing="false"
					onAction="#logoutButtonAction" prefHeight="35.0" prefWidth="133.0"
					style="-fx-background-color: green; -fx-background-radius: 50px;"
					text="Log out" textAlignment="CENTER" textFill="WHITE">
					<font>
						<Font name="Berlin Sans FB" size="16.0" />
					</font>
				</Button>
			</children>
		</HBox>
	</bottom>
</BorderPane>
