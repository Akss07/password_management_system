<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="520.0"
	prefWidth="800.0" xmlns="http://javafx.com/javafx/20.0.1"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="controller.SearchPasswordPage">
	<children>
		<Pane layoutY="14.0" prefHeight="505.0" prefWidth="800.0">
			<children>
				<Label layoutX="219.0" layoutY="14.0"
					text="Password Management System" textFill="#070707">
					<font>
						<Font name="Berlin Sans FB" size="28.0" />
					</font>
				</Label>
				<Label layoutX="272.0" layoutY="45.0"
					text="make sure your account is secure" textFill="#6f6a6a">
					<font>
						<Font name="Berlin Sans FB" size="16.0" />
					</font>
				</Label>
				<Label layoutX="328.0" layoutY="118.0" prefHeight="22.0"
					prefWidth="144.0" text="Search Password" textFill="#172452">
					<font>
						<Font name="Berlin Sans FB" size="20.0" />
					</font>
				</Label>
				<HBox alignment="CENTER_RIGHT" layoutX="172.0" layoutY="189.0"
					maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
					minWidth="-Infinity" prefHeight="35.0" prefWidth="456.0"
					style="-fx-background-color: transparent; -fx-border-color: #E1E1E1; -fx-border-radius: 50px;">
					<children>
						<TextField fx:id="searchdomainTextField"
							alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
							minHeight="-Infinity" minWidth="-Infinity"
							onKeyPressed="#fieldOnEnter" prefHeight="35.0" prefWidth="433.0"
							promptText="Enter your Domain to search"
							style="-fx-background-color: transparent;" />

					</children>
					<padding>
						<Insets right="10.0" />
					</padding>
				</HBox>
				<Button fx:id="mainButton" layoutX="298.0" layoutY="266.0"
					minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false"
					onAction="#mainButtonOnAction" prefHeight="35.0" prefWidth="204.0"
					style="-fx-background-color: green; -fx-background-radius: 50px;"
					text="SEARCH" textFill="WHITE" />
				<Label fx:id="invalidLabel" alignment="CENTER"
					contentDisplay="CENTER" layoutX="320.0" layoutY="348.0"
					prefHeight="17.0" prefWidth="160.0"
					style="-fx-background-color: #FAE4ED;" textAlignment="CENTER"
					textFill="#a5155f" visible="false" />
			</children>
		</Pane>
	</children>
</AnchorPane>
